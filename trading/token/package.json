{
  "name": "nextia-token",
  "version": "1.0.0",
  "description": "Proyecto Hardhat para el token Nextia (NXT)",
  "main": "index.js",
  "scripts": {
    "test": "npx hardhat test",
    "test:unit": "HARDHAT_NETWORK=hardhat npx hardhat test",
    "test:local": "HARDHAT_NETWORK=localhost npx hardhat test",
    "compile": "npx hardhat compile",
    "deploy": "npx hardhat run scripts/deploy.js --network localhost",
    "coverage": "npx hardhat coverage",
    "gas": "REPORT_GAS=true npx hardhat test test/NextiaToken.gas.test.js",
    "gas:all": "REPORT_GAS=true npx hardhat test"
  },
  "author": "George & BroDev",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "dotenv": "^17.2.2",
    "hardhat": "^2.26.3",
    "hardhat-gas-reporter": "^1.0.10",
    "husky": "^9.1.7",
    "solidity-coverage": "^0.8.16"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "ethers": "^6.15.0"
  }
}
